<h3 style="padding-left: 290px;">{{ViewTitle}}</h3>

<form action ="/patient" method="POST" autocomplete="off" style="overflow-x: hidden;text-align: center;">
<input type="hidden" name="_id" value="{{patient._id}}">
<div class="form-row">
  <div class="form-group col-md-6">
    <label for="exampleInputEmail1">Name</label>
    <input type="text" class="form-control" id="name" name="name" aria-describedby="name" value={{patient.name}}>  
    <div class="text-danger">
      {{patient.nameError}}
    </div>
  </div>
  <div class="form-group col-md-6">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" name ="email" aria-describedby="name" value={{patient.email}}>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    <div class="text-danger">
      {{patient.emailError}}
    </div>
  </div>
  </div>
  <div class="form-row">
  <div class="form-group col-md-6">
    <label for="age">Age</label>
    <input type="text" class="form-control" id="age" name ="age" aria-describedby="name" value={{patient.age}}>
   
  </div>
  <div class="form-group col-md-6">
    <label for="city">City</label>
    <input type="text" class="form-control" id="city" name ="city" aria-describedby="name" value={{patient.city}}>  
  </div>
  </div>
  <div class="form-row">
  <div class="form-group col-md-6">
    <label for="symptoms">Symptoms</label>
    <input type="text" class="form-control" id="symptoms" name ="symptoms" aria-describedby="name" value={{patient.symptoms}}>
    
  </div>
  <div class="form-group col-md-6">
    <label for="occupation">Occupation</label>
    <input type="text" class="form-control" id="occupation" name ="occupation" aria-describedby="name" value={{patient.occupation}}>
    
  </div>
  </div>
  <div class="form-row">
  <div class="form-group col-md-6">
    <label for="occupation">Marital Status</label>
    <input type="text" class="form-control" id="maritalstatus" name ="maritalstatus" aria-describedby="name" value={{patient.maritalstatus}}>
    
  </div>
  <div class="form-group col-md-6">
    <label for="occupation">Gender</label>
    <input type="text" class="form-control" id="gender" name ="gender" aria-describedby="name" value={{patient.gender}}>
  </div>
  </div>
  <button type="submit" class="btn btn-primary"><i class="fa fa-database" aria-hidden="true"></i> Submit</button>
   <a class="btn btn-secondary" href="patient/list"><i class="fa fa-list-alt"></i> View All</a>
</form>